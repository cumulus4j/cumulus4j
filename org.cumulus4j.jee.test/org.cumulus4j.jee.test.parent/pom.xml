	<properties>
		<version.org.jboss.jbossas>6.0.0.20100429-M3</version.org.jboss.jbossas>
	</properties>

	<repositories>
		<repository>
			<!-- for javax.persistence -->
			<id>eclipse-sonatype</id>
			<url>http://maven.eclipse.org/nexus/content/repositories/Sonatype/</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
 		<repository>
			<id>jboss-public-repository</id>
			<url>http://repository.jboss.org/nexus/content/groups/public-jboss/</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>

		<!--
		Repositories here to be able to download parent-POM, if we build the GAE test stuff
		completely independently (and don't have the parent-POM in the local repo, yet).
		-->
		<repository>
			<id>dev.nightlabs.org-libs-releases-local</id>
			<url>http://dev.nightlabs.org/maven-repository/libs-releases-local/</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
			<releases>
				<enabled>true</enabled>
			</releases>
		</repository>
		<repository>
			<id>dev.nightlabs.org-libs-snapshots-local</id>
			<url>http://dev.nightlabs.org/maven-repository/libs-snapshots-local/</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
			<releases>
				<enabled>false</enabled>
			</releases>
		</repository>
	</repositories>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>javax</groupId>
				<artifactId>javaee-api</artifactId>
				<version>6.0</version>
				<scope>provided</scope>
			</dependency>
			<dependency>
				<groupId>commons-lang</groupId>
				<artifactId>commons-lang</artifactId>
				<version>2.6</version>
			</dependency>
			 <dependency>
	 			<groupId>org.datanucleus</groupId>
				<artifactId>datanucleus-jca</artifactId>
				<type>rar</type>
				<version>3.1.0-release</version>
			</dependency>
			<dependency>
				<groupId>org.cumulus4j.jee.test</groupId>
				<artifactId>org.cumulus4j.jee.test.ejb</artifactId>
				<version>${cumulus4j.version}</version>
				<type>ejb</type>
			</dependency>
			<dependency>
				<groupId>org.cumulus4j.jee.test</groupId>
				<artifactId>org.cumulus4j.jee.test.ear</artifactId>
				<version>${cumulus4j.version}</version>
				<type>ear</type>
			</dependency>
			<dependency>
				<groupId>org.cumulus4j.jee.test</groupId>
				<artifactId>org.cumulus4j.jee.test.glassfish</artifactId>
				<version>${cumulus4j.version}</version>
			</dependency>
 			<dependency>
			     <groupId>org.jboss.jbossas</groupId>
			     <artifactId>jboss-as-depchain</artifactId>
			     <version>${version.org.jboss.jbossas}</version>
			     <type>pom</type>
 			     <scope>import</scope> 
			 </dependency> 
		</dependencies>
	</dependencyManagement>
</project>