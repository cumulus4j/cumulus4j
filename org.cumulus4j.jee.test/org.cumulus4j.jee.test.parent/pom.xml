<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<parent>
		<artifactId>org.cumulus4j.parent</artifactId>
		<groupId>org.cumulus4j</groupId>
		<version>1.0.2</version>
		<relativePath>../org.cumulus4j.parent/pom.xml</relativePath>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.cumulus4j.jee.test</groupId>
	<artifactId>org.cumulus4j.jee.test.parent</artifactId>
	<packaging>pom</packaging>
	<description>JEE test parent POM</description>

	<repositories>
		<repository>
			<!-- for javax.persistence -->
			<id>eclipse-sonatype</id>
			<url>http://maven.eclipse.org/nexus/content/repositories/Sonatype/</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
	</repositories>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>javax</groupId>
				<artifactId>javaee-api</artifactId>
				<version>6.0</version>
				<scope>provided</scope>
			</dependency>

			<dependency>
				<groupId>org.cumulus4j.jee.test</groupId>
				<artifactId>org.cumulus4j.jee.test.ejb</artifactId>
				<version>${cumulus4j.version}</version>
				<type>ejb</type>
			</dependency>
			<dependency>
				<groupId>org.cumulus4j.jee.test</groupId>
				<artifactId>org.cumulus4j.jee.test.ear</artifactId>
				<version>${cumulus4j.version}</version>
				<type>ear</type>
			</dependency>
			<dependency>
				<groupId>org.cumulus4j.jee.test</groupId>
				<artifactId>org.cumulus4j.jee.test.glassfish</artifactId>
				<version>${cumulus4j.version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>
</project>